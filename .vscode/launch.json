// A launch configuration that launches the extension inside a new window
{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
            "stopOnEntry": false,
            "sourceMaps": true
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "protocol": "inspector",
            "port": 6009,
            "restart": true,
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Session",
            "configurations": ["Extension", "Attach"]
        }
    ]
}